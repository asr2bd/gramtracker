<body>

<div class="row">
    <div class="large-12 columns">

        <h1 class="header text-center">gramtracker.io</h1>
        <div class="row">
            <div class="large-9 small-centered columns">
                <p class="text-center">Welcome to gramtracker, a lightweight web app to explore mutual follows on Instagram!</p>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="large-6 columns">
        <div class="panel">
            <p class="text-center">People you <span class="follow-text">follow</span>, who aren't following back (they trippin'):</p>
                <% noFollow.forEach(function(user, index, array){ %>
                    <%= include user_following.ejs %>
                <% }); %>
        </div>
    </div>

    <div class="large-6 columns">
        <div class="panel">
            <p class="text-center">People following you, who you don't <span class="follower-text">follow</span> (spread the love):</p>
            <% noFollowing.forEach(function(user, index, array){%>
            <%= include user_not_following.ejs %>
            <% }); %>
        </div>
    </div>
</div>
<script>
    document.write('<script src=' +
            ('__proto__' in {} ? 'js/vendor/zepto' : 'js/vendor/jquery') +
            '.js><\/script>')
</script>

